{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",

      
    "lib": [
      "es2018",
      "dom"
    ],

    "paths": {
      "@fuse": [
          "@fuse/*"
      ]
    }
    
  },
  "include": [
    "./src/@fuse/**/*",
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": false,

    "enableIvy": false
  }
}
